@using Abp.Authorization.Users
@model pogoshift.Web.Models.Schedule.ScheduleViewModel
@using pogoshift.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.Schedule;
    ViewBag.Title = L("Schedule");
    var user = Model.LoginInformations.User;
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
@section styles {
    <link href="~/css/calendar.css" rel="stylesheet" type="text/css" />
    <link href="~/view-resources/Views/Schedule/_Layout.css" rel="stylesheet" />
}

@section scripts
{
    <environment names="Development">
        <script type="module" src="~/view-resources/Views/Schedule/Schedule.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script type="module" src="~/view-resources/Views/Schedule/Schedule.min.js" asp-append-version="true"></script>
    </environment>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">@L("Schedule")</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="clearfix">
            <div id="schedule-calendar"></div>
        </div>
    </div>
</section>